                    <input type="checkbox" class="form-check-input" id="interpreter-check" name="interpreter_check"
                           autocomplete='off'>
                    <label class="form-check-label" for="interpreter-check">{{lang.interpreterreq1}} 
                    {{lang.interpreterreq2}} <i>{{lang.optional}}</i></label>
                </div>
            {{/if}}
            <!--interpreter-->
            {{#if data.interpreter}}
                <div id="interpreter-container" class="mb-4">
                    <h5>{{lang.interpreter}}</h5>
                    <!--interpreter name-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="interpreter-input">{{lang.interpreterid}}</label>
                            <input type="text" class="form-control" id="interpreter-input" name="interpreter">
                            <div class="invalid-feedback">
                                {{lang.interpretervalidid}}
                            </div>
                        </div>
                    </div>
                    <hr/>
                </div>
            {{/if}}
            <!--email download check-->
            {{#if data.email}}
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="form-check-input" id="email-download-check"
                           name="email_download_check" autocomplete='off'>
                    <label class="form-check-label" for="email-download-check">{{lang.downloadconsentemail}} 
                        <i>{{lang.optional}}</i></label>
                </div>
            {{/if}}
            <!--download check-->
            {{#if data.download}}
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="form-check-input" id="download-check" name="download_check"
                           autocomplete='off'>
                    <label class="form-check-label" for="download-check">{{lang.downloadconsentaftersign}}
<i>{{lang.optional}}</i></label>
                </div>
