                        <div>
                            <img id="parent1-decline-signature-img" class="mb-3" src="" width="300" height="80"/>
                            <textarea id="parent1-decline-signature-data" class="form-control" name="parent1_signature_data"
                                      hidden></textarea>
                            <div class="invalid-feedback">
                                {{lang.parentvalidsig}}
                            </div>
