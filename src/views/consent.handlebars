<div class="container">
    <!--logo-->
    <div class="py-3 text-center">
        <img id="logo" class="d-block mx-auto mb-4" src="img/IcahnLogo.png" alt="icahn logo" width="300" height="75">
        <h2>{{lang.consentformupper}}</h2>
        <p class="lead"></p>
    </div>

    <!--form begin-->
    <div class="col-md-10 offset-md-1">
        <!--title-->
        {{#if data.patient}}
            <h4 class="mb-4">{{lang.personalinformation}}</h4>
        {{/if}}

        <form class="needs-validation" action="/consent" method="post" novalidate>
            <!--patient-->
            {{#if data.patient}}
                <div id="patient-container" class="mb-4">
                    <h5>{{lang.participant}}</h5>
                    <!--name-->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="first-name-input">{{lang.participantfirstname}}</label>
                            <input type="text" class="form-control" id="first-name-input" name="first_name"
                                   value="{{#if data.first_name}}{{data.first_name}}{{/if}}" required>
                            <div class="invalid-feedback">
                                {{lang.participantvalidfirst}}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="last-name-input">{{lang.participantlastname}}</label>
                            <input type="text" class="form-control" id="last-name-input" name="last_name"
                                   value="{{#if data.last_name}}{{data.last_name}}{{/if}}" required>
                            <div class="invalid-feedback">
                               {{lang.participantvalidlast}}
                            </div>
                        </div>
                    </div>
                    <!--signature-->
                    {{#unless data.echo_11}}
                    <div id="patient-signature-container">
                        <label for="patient-signature-data">{{lang.participantsig}}</label>
                        <div>
                            <img id="patient-signature-img" class="mb-3" src="" width="300" height="80"/>
                            <textarea id="patient-signature-data" class="form-control" name="patient_signature_data"
                                      hidden required></textarea>
                            <div class="invalid-feedback">
                                {{lang.participantvalidsig}}
                            </div>
                        </div>
                        <div>
                            <button id="add-patient-signature-btn" type="button" class="btn btn-primary"
                                    data-toggle="modal" data-target="#patient-signature-modal">
                                {{lang.participantaddsig}}
                            </button>
                        </div>
                    </div>
                    {{/unless}}
                    <hr/>
                </div>
            {{/if}}
            <!--ra-->
            {{#if data.ra_modify}}
                <div id="ra-container" class="mb-4">
                    <h5>{{lang.personexplaining}}</h5>
                    <!--ra name-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="ra-full-name-input">{{lang.delfullname}}</label>
                            <input type="text" class="form-control" id="ra-full-name-input" name="ra_full_name"
                                   value="{{data.ra_modify.full_name}}" required>
                            <div class="invalid-feedback">
                                {{lang.delnamereq}}
                            </div>
                        </div>
                    </div>
                    <!--ra signature-->
                    <div>
                        <label for="ra-signature-data">{{lang.delsig}}</label>
                        <div>
                            <img id="ra-signature-img" class="mb-3" src="{{data.ra_modify.signature_data}}" width="300"
                                 height="80"/>
                            <textarea id="ra-signature-data" class="form-control" name="ra_signature_data"
                                      hidden required>{{data.ra_modify.signature_data}}</textarea>
                            <div class="invalid-feedback">
                                {{lang.delvalid}}
                            </div>
                        </div>
                        <div>
                            <button id="add-ra-signature-btn" type="button" class="btn btn-primary"
                                    data-toggle="modal"
                                    data-target="#ra-signature-modal">
                                {{lang.delchange}}
                            </button>
                        </div>
                    </div>
                    <hr/>
                </div>
            {{/if}}
            <!--email-->
            {{#if data.email}}
                <div id="email-container" class="mb-3">
                    <label for="email-input">{{lang.email}}</label>
                    <input type="email" class="form-control" id="email-input" name="email"
                           placeholder="you@example.com">
                    <div class="invalid-feedback">
                        {{lang.validemail}}
                    </div>
                </div>
            {{/if}}
            <!--representative check-->
            {{#if data.representative}}
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="form-check-input" id="representative-check"
                           name="representative_check" autocomplete='off'>
                    <label class="form-check-label" for="representative-check">{{lang.repauthorized1}} 
                        {{lang.repauthorized2}} <i>{{lang.optional}}</i></label>
                </div>
            {{/if}}
            <!--representative-->
            {{#if data.representative}}
                <div id="representative-container" class="mb-4">
                    <h5>{{lang.signatureforunable}}</h5>
                    <!--patient name copy-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="full-name-input-copy">{{lang.participantfullname}}</label>
                            <input type="text" class="form-control" id="full-name-input-copy" name="full_name_copy"
                                   value="" readonly>
                        </div>
                    </div>
                    <!--representative name-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="representative-full-name-input">{{lang.repfullname}}</label>
                            <input type="text" class="form-control" id="representative-full-name-input"
                                   name="representative_full_name">
                            <div class="invalid-feedback">
                                {{lang.repvalidrequired}}
                            </div>
                        </div>
                    </div>
                    <!--representative signature-->
                    <div>
                        <label for="representative-signature-data">{{lang.repsig}}</label>
                        <div>
                            <img id="representative-signature-img" class="mb-3" src="" width="300" height="80"/>
                            <textarea id="representative-signature-data" class="form-control"
                                      name="representative_signature_data"
                                      hidden></textarea>
                            <div class="invalid-feedback">
                                {{lang.repvalidsig}}
                            </div>
                        </div>
                        <div>
                            <button id="add-representative-signature-btn" type="button" class="btn btn-primary"
                                    data-toggle="modal"
                                    data-target="#representative-signature-modal">
                                {{lang.repaddsig}}
                            </button>
                        </div>
                    </div>
                    <hr/>
                </div>
            {{/if}}
            <!--child check-->
            {{#if data.child}}
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="form-check-input" id="child-check" name="child_check" autocomplete='off'>
                    <label class="form-check-label" for="child-check">{{lang.childassent}} <i>{{lang.optional}}</i></label>
                </div>
            {{/if}}
            <!--child-->
            {{#if data.child}}
