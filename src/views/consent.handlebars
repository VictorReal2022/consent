                    <!--parent2 name-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="parent2-full-name-input">{{lang.secondparentfullname}}</label>
                            <input type="text" class="form-control" id="parent2-full-name-input"
                                   name="parent2_full_name">
                            <div class="invalid-feedback">
                                {{lang.parentrequired}}
                            </div>
                        </div>
                    </div>
                    <!--parent2 signature-->
                    <div>
                        <label for="parent2-signature-data">{{lang.sigsecondparent}}</label>
                        <div>
                            <img id="parent2-signature-img" class="mb-3" src="" width="300" height="80"/>
                            <textarea id="parent2-signature-data" class="form-control" name="parent2_signature_data"
                                      hidden></textarea>
                            <div class="invalid-feedback">
                                {{lang.parentvalidsig}}
                            </div>
                        </div>
                        <div>
                            <button id="add-parent2-signature-btn" type="button" class="btn btn-primary"
                                    data-toggle="modal"
                                    data-target="#parent2-signature-modal">
                                {{lang.parentaddsig}}
                            </button>
                        </div>
                    </div>
                    <hr/>
                </div>
            {{/if}}
            <!--witness check-->
            {{#if data.witness}}
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="form-check-input" id="witness-check" name="witness_check"
                           autocomplete='off'>
                    <label class="form-check-label" for="witness-check">{{lang.witnessrequired1}} 
                        {{lang.witnessrequired2}} <i>{{lang.optional}}</i></label>
                </div>
            {{/if}}
            <!--witness-->
            {{#if data.witness}}
                <div id="witness-container" class="mb-4">
                    <h5>{{lang.witnesssection}}</h5>
                    <!--witness name-->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="witness-full-name-input">{{lang.witnessfullname}}</label>
                            <input type="text" class="form-control" id="witness-full-name-input"
                                   name="witness_full_name">
                            <div class="invalid-feedback">
                                {{lang.witnessnamereq}}
                            </div>
