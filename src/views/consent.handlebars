        <!--signature modal-->
        <div class="modal fade" id="patient-signature-modal" tabindex="-1" role="dialog"
             aria-labelledby="patient-signature-modal-label" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="patient-signature-modal-label">{{lang.participantsig}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body d-flex h-100">
                        <canvas id="patient-signature-modal-canvas" width="750" height="200"></canvas>
                    </div>
                    <div class="modal-footer">
                        <div class="mr-auto">
                            {{lang.usemouseorfinger}}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="patient-signature-modal-save-btn" type="button" class="btn btn-primary">{{lang.save}}
