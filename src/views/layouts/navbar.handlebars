<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>iOPEN</title>
    <style>
    body > .container {
        padding: 50px 15px 20px;
    }

    #logo {
        background-color: white;
    }

    .popup {
        display: none;
        position: absolute;
        z-index: 99999;
        cursor: pointer;
    }

    .toast {
        position: absolute;
        top: 80px;
        right: 0;
        z-index: 99999;
    }

    #search-modal {
        z-index: 99999;
    }

    #search-icon {
        padding: 10px;
        color: white;
    }

    @media only screen and (max-width: 768px) {
        body > .container {
            margin-top: 3rem;
        }

        #btn-group {
            margin-top: 0.5rem;
        }
    }

    @media only screen and (min-width: 768px) {
        #btn-group {
            width: 100%;
        }
    }
    </style>
    {{{assetLinks.style}}}
    {{{assetLinks.script}}}
</head>
<body class="bg-light">
<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <img id="logo" class="mr-4" src="img/IcahnLogo.png" alt="" width="200" height="55">
        <div class="navbar-brand">iOPEN System</div>
        <div id="btn-group">
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <li>
                    <a id="protocol-btn" href="/protocol" class="btn btn-primary" tabindex="-1">
                        {{lang.continue}}
                    </a>
                    <a id="contact-btn" href="/contact" class="btn btn-secondary" tabindex="-1">
                        {{lang.help}}
                    </a>
                    <button id="logout-btn" class="btn btn-secondary" data-target="#logout-modal" data-toggle="modal">
                        {{lang.quit}}
                    </button>
                </li>
            </ul>
        </div>
    </nav>
</header>

{{#if newMsg}}
    <!--message toast-->
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false" data-delay="5000">
        <div class="toast-header">
            <i class="fas fa-info-circle" style="padding-right: 5px;"></i>
            <strong class="mr-auto">{{lang.newmessagerecieved}}</strong>
            <small>{{newMsg}}</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{lang.newmessage1}} <a href="/reply">{{lang.newmessage2}}</a> {{lang.newmessage3}}
        </div>
    </div>
{{/if}}

<!--Logout modal-->
<div id="logout-modal" tabindex="-1" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header"><h4>{{lang.quit}}</h4></div>
            <div class="modal-body">{{lang.quitconfirm}}</div>
            <div class="modal-footer">
                <a class="btn btn-primary" href="/logout">{{lang.yes}}</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">{{lang.no}}</button>
            </div>
        </div>
    </div>
</div>


<div class="popup">
    <i id="search-icon" class="fas fa-search fa-lg bg-info rounded-circle" data-target="#search-modal"
       data-toggle="modal"></i>
</div>
<!-- Search Modal -->
<div id="search-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="search-frame" height="400px" width="100%" style="border:none"></iframe>
            </div>
        </div>
    </div>
</div>
{{{body}}}
</body>
</html>
