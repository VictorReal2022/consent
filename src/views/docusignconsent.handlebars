<div class="container">
    <!--logo-->
    <div class="py-3 text-center">
        <img id="logo" class="d-block mx-auto mb-4" src="img/IcahnLogo.png" alt="icahn logo" width="300" height="75">
        <h2>{{lang.consentformupper}}</h2>
        <p class="lead"></p>
    </div>

    <!--form begin-->
    <div class="col-md-10 offset-md-1">
        <!--title-->
            <h4 class="mb-4">{{lang.docusignmessage1}}
                {{lang.docusignmessage2}}
            </h4>
            <p><b>{{lang.emailinbox}}</b></p>

        <form class="needs-validation" action="/docusignconsent" method="post" novalidate>
            <!--patient-->
                <div id="patient-container" class="mb-4">
                    <h5>{{lang.participant}}</h5>
                    <!--name-->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="first-name-input">{{lang.participantfirstname}}</label>
                            <input type="text" class="form-control" id="first-name-input" name="first_name"
                                   value="{{#if data.first_name}}{{data.first_name}}{{/if}}" required>
                            <div class="invalid-feedback">
                                {{lang.participantvalidfirst}}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="last-name-input">{{lang.participantlastname}}</label>
                            <input type="text" class="form-control" id="last-name-input" name="last_name"
                                   value="{{#if data.last_name}}{{data.last_name}}{{/if}}" required>
                            <div class="invalid-feedback">
                                {{lang.participantvalidfirst}}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="last-name-input">{{lang.email}} {{lang.optional}}</label>
                            <input type="text" class="form-control" id="email-input" name="email"
                                   value="">
                        </div>
                    </div>
                    <!--submit-->
                    <div class="col-md-4 float-none mb-5">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">{{lang.continuedocusign}}</button>
                    </div>
                 </form>
                </div>
            </div>

{{#assetLink 'script'}}
    <script src="js/docusignconsent.bundle.js"></script>
{{/assetLink}}
